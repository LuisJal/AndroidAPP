<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"

    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:orientation="vertical"
    android:background="@drawable/pregunta"
    tools:context=".LoginFragment">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/imail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:gravity="end"
        android:hint="Email"
        app:startIconDrawable="@drawable/baseline_create_24"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="250dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:background="@drawable/gradiente"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="end"
        android:layout_marginTop="10dp"

        android:hint="Password"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/gradiente"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/terms_and_conditions_textview"
        android:layout_width="250dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:text="By signing up, you agree to our Terms and Conditions and Privacy Policy."
        android:textColorLink="#0000FF"
        android:autoLink="web"/>


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded"/>

</LinearLayout>